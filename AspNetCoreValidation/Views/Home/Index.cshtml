@model AspNetCoreValidation.Models.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
    DateTime elaborationTime = ViewBag.ElaborationTime;
    bool modelStateIsValid = ViewBag.ModelStateIsValid;
}
<section style="margin-top:10px">
    <div class="row">
        elaborationTime: @elaborationTime<br />
        modelStateIsValid: @modelStateIsValid
    </div>
    <div class="row">
        <form class="smart-form">
            <div class="form-group">
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <input asp-for="DoB" />
                <span asp-validation-for="DoB"></span>
            </div>
            <input type="submit" />
        </form>
    </div>
</section>

@section Scripts {
    <!-- JQUERY VALIDATE -->
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}

